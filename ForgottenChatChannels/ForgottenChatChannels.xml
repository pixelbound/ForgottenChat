<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="ForgottenChatChannels.lua"/>
		<Scripts>
			<OnLoad>
			</OnLoad>
			<OnEvent>
			</OnEvent>
        </Scripts>
	<!--Virtual Frames-->
	<Frame name="FCCHANNEL" frameStrata="BACKGROUND" movable="true" enableMouse="true" resizable="true" hidden="true" parent="UIParent" virtual="true">
		<Size>
			<AbsDimension x="400" y="200"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="UIParent" relativePoint="CENTER"/>
		</Anchors>
		<Backdrop name="$parent_Backdrop" bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="4" right="4" top="4" bottom="4"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_MinimizeButton" inherits="UIPanelCloseButton">
				<Size>
					<AbsDimension x="17" y="17"/>
				</Size>
				<Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-8" y="-6"/>
						</Offset>
					</Anchor>
                </Anchors>
				<Scripts>
					<OnClick>
						FCC_MinimizeWidget(tonumber(string.sub(this:GetParent():GetName(),11)))
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\AddOns\ForgottenChatCC\MinimizeButton-Up.tga"/>
				<PushedTexture file="Interface\AddOns\ForgottenChatCC\MinimizeButton-Down.tga"/>
			</Button>
			<Button Name="$parent_MoveIt">
				<Size>
					<AbsDimension x="400" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString Name="$parent_Name" inherits="GameFontNormal" text="">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
									<Offset>
										<AbsDimension x="20" y="-8" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown>
						this:GetParent():StartMoving()
					</OnMouseDown>
					<OnMouseUp>
						this:GetParent():StopMovingOrSizing()
					</OnMouseUp>
					<OnDoubleClick>
						FCC_MinimizeWidget(tonumber(string.sub(this:GetParent():GetName(),11)))
					</OnDoubleClick>
				</Scripts>
			</Button>
			<ScrollingMessageFrame name="$parent_Chat" inherits="ChatFrameTemplate" id="1">
				<Size>
					<AbsDimension x="360" y="180"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
						<Offset>
							<AbsDimension x="0" y="-30"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString Name="$parentTabText" inherits="GameFontNormal" text=" " hidden="true">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="20" y="8" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
				</Frames>
				<Scripts>
					<OnLoad>
						ChatFrame_OnLoad();
						this:SetMaxResize(1600,1200)
						this:SetMinResize(100,30)
						this.editBox=ChatFrameEditBox
						this.ready=1
					</OnLoad>
					<OnEvent>
						if(this.ready==1)then
							ChatFrame_OnEvent(event)
						end
					</OnEvent>
					<OnUpdate>
						if(this.LinksFixed~=1)then
							this:Hide()
							this:Show()
							this.LinksFixed=1
						end
						ChatFrame_OnUpdate(arg1);
					</OnUpdate>
					<OnHide>
						this.LinksFixed=0
					</OnHide>
					<OnHyperlinkClick>
						ChatFrame_OnHyperlinkShow(arg1, arg2, arg3);
					</OnHyperlinkClick>
					<OnMouseWheel>
						if ( tonumber(arg1) > 0 ) then
							if(IsControlKeyDown())then
								this:ScrollToTop()
							else
								this:ScrollUp()
							end
						else
							if(IsControlKeyDown())then
								this:ScrollToBottom()
							else
								this:ScrollDown()
							end
						end
					</OnMouseWheel> 
				</Scripts>
			</ScrollingMessageFrame>
		</Frames>
		<Scripts>
			<OnMouseDown>
				if(IsShiftKeyDown())then
					if(IsControlKeyDown())then
						this:StartSizing("BOTTOMRIGHT")
					end
				end
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
				FCC_GrabNewDimensions(this:GetName())
			</OnMouseUp>
		</Scripts>
	</Frame>
	
	<Frame name="FCCSetup" toplevel="true" frameStrata="MEDIUM" movable="true" enableMouse="true" hidden="true" parent="UIParent">
		<Scripts>
			<OnLoad>
				FCC_OnLoad()
				this:RegisterEvent("ADDON_LOADED");
			</OnLoad>
			<OnEvent>
				FCC_OnEvent(event)
			</OnEvent>
		</Scripts>
	</Frame>
	
	<!--Commonly Used Frames -->
	<Frame name="FC_Channel1" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel2" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel3" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel4" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel5" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel6" inherits="FCCHANNEL"/>
	<Frame name="FC_Channel7" inherits="FCCHANNEL"/>
	
</Ui>